<h2 style="margin-top:50px;">商品列表</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增商品", new_admin_product_path(@product), class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <th>#</th>
    <th width="220">商品图片</th>
    <th>名称</th>
    <th>价格</th>
    <th width="100">管理选项</th>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("编缉", edit_admin_product_path(product), class: :"btn btn-success btn-xs") %>
          <%= link_to("删除", admin_product_path(product), method: :delete, class: :"btn btn-danger btn-xs" ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
